{% extends "LoginLoginBundle:Default:index.html.twig" %}
 {% block stylesheets %}

     <style type="text/css">

         .form-signin {
             max-width: 300px;
             padding: 19px 29px 29px;
             background-color: #ffffff;
             border: 3px solid #e5e5e5;
             -webkit-border-radius: 5px;
             -moz-border-radius: 5px;
             border-radius: 5px;
             -webkit-box-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
             -moz-box-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
             box-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
         }

         .form-signim .form-signin-heading {
             margin-bottom: 10px;
         }
         .form-signin input[type="text"],
         .form-signin input[type="password"] {
             font-size: 16px;
             height: auto;
             margin-bottom: 15px;
             padding: 7px 8px;
         }

     </style>
 {% endblock %}
  {% block container %}

      <div class="container" >
          <form  class="form-signin" method="POST" action="{{ path('login_sin') }}">
              <h2 class="form-signin-heading">Join </h2>
              <input type="text" name="username" placeholder="User name">
              <input type="text" name="email" placeholder="Email">
              <input type="password" name="password" class="input-block-level" placeholder="Password">
              <button class="btn btn-large btn-primary " type="submit">Registration</button> &nbsp;&nbsp;
              <a class="login_a" href="{{ path('login') }}">Sing in</a>
          </form>

      </div>

  {% endblock %}
